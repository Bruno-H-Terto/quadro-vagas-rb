<% if @job_postings&.any? %>
  <ul class="divide-y divide-slate-100 w-full">
  <% @job_postings.each do |job| %>    
    <li class="flex items-start gap-4 px-4 py-3 border-b border-slate-100">
    <div class="flex flex-col gap-0 min-h-[2rem] items-start justify-center w-full">
      <h4 class="w-full text-base text-slate-700"><%= job.title %></h4>
      <p class="w-full text-sm text-slate-500"><%= job.company_profile.name %></p>
    </div>
  </li>
  <% end %>
  </ul>
<% else %>
  <p><%= t('.no_jobs_found') %>.</p>
<% end %>